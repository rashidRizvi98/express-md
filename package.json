{
  "name": "express-md",
  "version": "2.1.0",
  "description": "Express middleware to serve markdown files as HTML",
  "homepage": "https://github.com/orca-scan/express-md",
  "keywords": [
    "express",
    "markdown",
    "middleware",
    "md"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/orca-scan/express-md.git"
  },
  "bugs": {
    "url": "https://github.com/orca-scan/express-md/issues"
  },
  "author": {
    "name": "Orca Scan",
    "email": "hello@orcascan.com",
    "url": "https://orcascan.com"
  },
  "dependencies": {
    "async": "~0.1.22",
    "js-yaml": "^3.14.0",
    "marked": "^4.0.10",
    "mime": "^3.0.0"
  },
  "devDependencies": {
    "eslint": "^7.4.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "jasmine-node": "^3.0.0"
  },
  "scripts": {
    "test": "NODE_ENV=test ./node_modules/.bin/jasmine-node tests  --verbose --color --forceexit --junitreport --captureExceptions"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "es6": false,
      "node": true
    },
    "globals": {},
    "rules": {
      "brace-style": [
        "error",
        "stroustrup"
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "func-names": 0,
      "indent": [
        "error",
        4,
        {
          "SwitchCase": 1,
          "MemberExpression": "off"
        }
      ],
      "max-len": [
        2,
        180,
        4,
        {
          "ignoreUrls": true,
          "ignoreComments": false
        }
      ],
      "new-cap": [
        "error",
        {
          "capIsNewExceptions": [
            "Router",
            "ObjectId",
            "DEBUG"
          ],
          "properties": false
        }
      ],
      "no-underscore-dangle": 0,
      "no-unused-vars": [
        "warn"
      ],
      "no-use-before-define": [
        "error",
        {
          "functions": false
        }
      ],
      "no-var": [
        "off"
      ],
      "one-var": [
        "off"
      ],
      "vars-on-top": [
        "off"
      ],
      "no-param-reassign": [
        "off"
      ],
      "no-lone-blocks": [
        "off"
      ],
      "padded-blocks": 0,
      "prefer-template": [
        "off"
      ],
      "prefer-arrow-callback": [
        "off"
      ],
      "prefer-object-spread": [
        "off"
      ],
      "default-case": [
        "off"
      ],
      "wrap-iife": [
        2,
        "any"
      ],
      "no-plusplus": [
        "off"
      ],
      "require-jsdoc": [
        "warn",
        {
          "require": {
            "FunctionDeclaration": true,
            "MethodDefinition": true,
            "ClassDeclaration": true
          }
        }
      ],
      "object-shorthand": [
        "error",
        "never"
      ],
      "space-before-function-paren": "off",
      "strict": "off",
      "valid-jsdoc": [
        "error"
      ]
    }
  },
  "license": "MIT"
}
